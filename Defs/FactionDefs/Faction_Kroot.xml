<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef>
    <defName>KrootTribal</defName>
    <label>Kroot Kindred Tribe</label>
    <description>A tribe of Kroot from Pech, it is unknown how they made it so far from their home world with such a low level of technology, but they appear to be aided by the Tau Empire.</description>
    <pawnsPlural>Kroot</pawnsPlural>
    <settlementGenerationWeight>0.2</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <earliestRaidDays>15</earliestRaidDays>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Shaper</leaderTitle>
    <startingGoodwill>
      <min>-80</min>
      <max>-50</max>
    </startingGoodwill>
    <fixedName>Kroot Kindred</fixedName>
    <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
    <techLevel>Neolithic</techLevel>
    <backstoryCategories>
      <li>KrootBackstory</li>
    </backstoryCategories>
    <hairTags>
      <li>KrootHair</li>
    </hairTags>
    <naturalColonyGoodwill>
      <min>-80</min>
      <max>-60</max>
    </naturalColonyGoodwill>
    <visitorTraderKinds>
      <li>Visitor_Kroot_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_Neolithic_BulkGoods</li>
      <li>Caravan_Neolithic_WarMerchant</li>
      <li>Caravan_Neolithic_Slaver</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <KrootWarrior>90</KrootWarrior>
          <KrootSoldier>150</KrootSoldier>
          <KrootTrusted>250</KrootTrusted>
          <KrootLeader>300</KrootLeader>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <KrootSoldier>90</KrootSoldier>
          <KrootTrusted>250</KrootTrusted>
          <KrootWarrior>130</KrootWarrior>
          <KrootHunter>50</KrootHunter>
          <KrootLeader>300</KrootLeader>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <KrootTrader>1</KrootTrader>
        </traders>
        <carriers>
          <Knarloc>4</Knarloc>
        </carriers>
        <guards>
          <KrootSoldier>90</KrootSoldier>
          <KrootGrower>130</KrootGrower>
          <KrootWarrior>130</KrootWarrior>
          <KrootHunter>150</KrootHunter>
          <KrootLeader>300</KrootLeader>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <KrootGrower>50</KrootGrower>
          <KrootSoldier>90</KrootSoldier>
          <KrootTrusted>250</KrootTrusted>
          <KrootHunter>100</KrootHunter>
          <KrootWarrior>130</KrootWarrior>
          <KrootLeader>300</KrootLeader>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/ZoomedIn_Base</settlementTexturePath>
    <factionIconPath>World/TauBaseIcon</factionIconPath>
  </FactionDef>
</Defs>