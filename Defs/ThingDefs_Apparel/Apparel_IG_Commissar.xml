  <!-- ====== Hats ====== -->
  <ThingDef ParentName="ArmorHelmetMakeableBase" Name="CommissarCap">
    <!-- Cadian Helmet -->
    <defName>CommissarCap</defName>
    <label>Commissar Cap</label>
    <techLevel>Spacer</techLevel>
    <description>The cap most fitting for a Commissar, demands respect, either that or a bullet to the head.</description>
    <graphicData>
      <texPath>Things/Imperial Guard/Commissar/Commissarcap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>O21_Imp_IGAdvancedArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>O21_ImpBench_Basic</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Cloth>50</Cloth>
      <CeramiteMedGrade>10</CeramiteMedGrade>
    </costList>
    <statBases>
      <Mass>1.8</Mass>
      <WorkToMake>24000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <MarketValue>300</MarketValue>
      <ArmorRating_Blunt>0.18</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.72</ArmorRating_Sharp>
      <ArmorRating_Heat>0.4</ArmorRating_Heat>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>5</Insulation_Heat>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.25</SocialImpact>
    </equippedStatOffsets>
    <thingCategories>
      <li>IGApparel</li>
    </thingCategories>
    <apparel>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <tags>
        <li>ImperialGuardApparel</li>
        <li>CommissarApparel</li>
      </tags>
      <wornGraphicPath>Things/Imperial Guard/Commissar/Commissarcap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
    </apparel>
  </ThingDef>
