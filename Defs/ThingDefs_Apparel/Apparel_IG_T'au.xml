      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <thingCategories Inherit="false">
      <li>TauApparel</li>
    </thingCategories>
    <apparel>
      <tags Inherit="false">
        <li>TauApparel</li>
        <li>T'auGuevesaApparel</li>
      </tags>
      <wornGraphicPath>Things/Imperial Guard/T'au/Armour/T'auHumanArmor</wornGraphicPath>
    </apparel>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>O21_TauBench_Basic</li>
      </recipeUsers>
      <researchPrerequisite>O21_Tau_Allies_HumanApparel</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
