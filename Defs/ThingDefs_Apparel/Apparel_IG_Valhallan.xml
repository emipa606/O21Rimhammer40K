    <description>A full-body uniform the Valhallan Ice Warriors most often wear, typically under their armor.</description>
    <graphicData>
      <texPath>Things/Imperial Guard/Valhallan/Clothing/Valhallan</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <apparel>
