  <!-- ========== Armour ========== -->
  <ThingDef ParentName="CadianArmorBase">
    <defName>GSCMiningTunic</defName>
    <label>mining tunic</label>
    <techLevel>Spacer</techLevel>
    <description>An armored tunic worn by civilian miners, protects as well as some military equipment to deal with the dangers while mining.</description>
    <graphicData>
      <texPath>Things/Imperium/Apparel/Body/Tunic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <thingCategories Inherit="False">
      <li>ICApparel</li>
    </thingCategories>
    <apparel Inherit="False">
      <tags>
        <li>ICApparel</li>
        <li>GSCApparel</li>
      </tags>
      <wornGraphicPath>Things/Imperium/Apparel/Body/Tunic</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker Inherit="False">
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>O21_Imp_Research</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>O21_ImpBench_Basic</li>
      </recipeUsers>
    </recipeMaker>
    <modExtensions>
      <li Class="O21Toolbox.ApparelExt.DefModExt_BodyRestrict">
        <BodyDefs>
          <li>Male</li>
          <li>Female</li>
        </BodyDefs>
      </li>
    </modExtensions>
  </ThingDef>
