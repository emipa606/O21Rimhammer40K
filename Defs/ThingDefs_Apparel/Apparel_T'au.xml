  <!-- ====== Armors ====== -->
  <ThingDef ParentName="ArmorSmithableBase" Name="TauArmorBase">
    <!-- Tau Combat Armour -->
    <defName>TauCombatArmor</defName>
    <label>Tau Combat Armor</label>
    <techLevel>Spacer</techLevel>
    <description>The armor commonly worn by the Tau Fire Caste.</description>
    <graphicData>
      <texPath>Things/Tau/T'au/Armour/T'auArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>O21_TauBench_Basic</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>O21_Tau_BasicArmor</researchPrerequisite>
    </recipeMaker>
    <costList>
      <Steel>80</Steel>
      <Plasteel>15</Plasteel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <statBases>
      <Mass>14</Mass>
      <WorkToMake>32000</WorkToMake>
      <MaxHitPoints>600</MaxHitPoints>
      <MarketValue>2000</MarketValue>
      <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Heat>0.50</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>20</Insulation_Heat>
      <ToxicSensitivity>-0.80</ToxicSensitivity>
    </statBases>
    <thingCategories>
      <li>TauApparel</li>
    </thingCategories>
    <apparel>
      <tags>
        <li>TauApparel</li>
        <li>T'auCombatApparel</li>
      </tags>
      <wornGraphicPath>Things/Tau/T'au/Armour/T'auArmor</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="ArmorSmithableBase" Name="TauLightArmorBase">
    <!-- Tau Scout Armour -->
    <defName>TauScoutArmor</defName>
    <label>Tau Scout Armor</label>
    <techLevel>Spacer</techLevel>
    <description>The armor commonly worn by scouts of the Tau Fire Caste.</description>
    <graphicData>
      <texPath>Things/Tau/T'au/Armour/T'auArmorScout</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>O21_TauBench_Basic</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>O21_Tau_BasicArmor</researchPrerequisite>
    </recipeMaker>
    <costList>
      <Steel>60</Steel>
      <Plasteel>10</Plasteel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <statBases>
      <Mass>14</Mass>
      <WorkToMake>24000</WorkToMake>
      <MaxHitPoints>400</MaxHitPoints>
      <MarketValue>1500</MarketValue>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.90</ArmorRating_Sharp>
      <ArmorRating_Heat>0.45</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>20</Insulation_Heat>
      <ToxicSensitivity>-0.80</ToxicSensitivity>
    </statBases>
    <thingCategories>
      <li>TauApparel</li>
    </thingCategories>
    <apparel>
      <tags>
        <li>TauApparel</li>
        <li>T'auScoutApparel</li>
      </tags>
      <wornGraphicPath>Things/Tau/T'au/Armour/T'auArmorScout</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
