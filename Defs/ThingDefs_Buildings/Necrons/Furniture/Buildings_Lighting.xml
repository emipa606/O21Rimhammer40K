<Defs>
  <ThingDef Name="NecronLamp">
    <defName>NecronFloorLamp_Green</defName>
    <label>necron floor lamp (green)</label>
    <description>Glowing green floor panel of Necrodermis.</description>
    <thingClass>Building</thingClass>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
    </building>
    <graphicData>
      <texPath>Things/Necron/Building/Lighting/FloorLampGreen</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <category>Building</category>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Floor</altitudeLayer>
    <passability>Standable</passability>
    <selectable>true</selectable>
