      <speed>200</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>Gun_TAURailgun</defName>
    <label>Tau Rail Gun</label>
    <graphicData>
      <texPath>Things/Building/Security/TAU/TAU_railgun_top_new</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <menuHidden>true</menuHidden>
    <description>Carefully crafted gun attached to a turret.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <statBases>
      <Mass>40</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.95</AccuracyMedium>
      <AccuracyLong>0.95</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags Inherit="false">
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_TAURailgun</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>500</range>
        <minRange>10</minRange>
        <ticksBetweenBurstShots>30</ticksBetweenBurstShots>
        <burstShotCount>6</burstShotCount>
        <soundCast>RailgunSound</soundCast>
        <muzzleFlashScale>15</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
  </ThingDef>
